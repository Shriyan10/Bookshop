{include '../common/headers.latte'}

<body>
    <h1>Book Details</h1>
    {foreach $bookDetails as $bookDetail}
    <div class="row-box">
        <a href="details/{$bookDetail->id}">
            <img src="{$bookDetail->imageUrl}" alt="Mountain">
            <p class="item-title">{$bookDetail->title}</p>
        </a>
        <p class="item-price">Price: Rs.{$bookDetail->price}</p>
        <div class="item-button">
            <button>+</button>
            <a href="checkout.php" class="buy">Buy</a>
        </div>
        <div>
            <form method="POST">
                <input type="hidden" name="type" value="EDIT" />
                <input type="hidden" name="bookId" value="{$bookDetail->id}" />
                <button>Edit</button>
            </form>
            <form method="POST">
                <input type="hidden" name="type" value="DELETE" />
                <input type="hidden" name="bookId" value="{$bookDetail->id}" />
                <button>Delete</button>
            </form>
        </div>
    </div>


    {/foreach}


</body>
</html>